				<textElement textAlignment="Justified">
					<font fontName="Times New Roman" size="12"/>
					<paragraph lineSpacing="1_1_2"/>
				</textElement>
				<text><![CDATA[17. The age for retirement from the Company's service is 60 years.]]></text>
			</staticText>
			<staticText>
				<reportElement x="39" y="215" width="516" height="56" uuid="1b2dca6c-8e34-460a-b55c-2891bea215e6"/>
